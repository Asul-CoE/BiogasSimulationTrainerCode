<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@android:color/black"
    tools:context=".Results">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        tools:context=".Results">

        <Button
            android:id="@+id/resultExit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="664dp"
            android:layout_marginTop="8dp"
            android:text="EXIT"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resultNew" />

        <TextView
            android:id="@+id/PowerOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:text="Power Output (kW):"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hoursRunningTitle" />

        <TextView
            android:id="@+id/noteBT2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="544dp"
            android:layout_marginTop="36dp"
            android:text="*STOP button once or twice to re-establish connection. *"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hoursRunningTitle" />

        <TextView
            android:id="@+id/noteBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="544dp"
            android:layout_marginTop="16dp"
            android:text="*In the instance that the bulb does not light up right away,
ensure to press"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hoursRunningTitle" />

        <TextView
            android:id="@+id/biogasheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="BIOGAS PLANT SIMULATION TRAINER"
            android:textColor="@android:color/white"
            android:textSize="8pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/OutputHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="128dp"
            android:layout_marginTop="4dp"
            android:text="Electrical Output"
            android:textColor="@android:color/white"
            android:textSize="9pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/biogasheader" />

        <TextView
            android:id="@+id/EnergyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="120dp"
            android:text="Energy (MJ): "
            android:textColor="@android:color/darker_gray"
            android:textSize="9pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/biogasheader" />

        <TextView
            android:id="@+id/BiogasValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="64dp"
            android:text="Biogas Value: "
            android:textColor="@android:color/darker_gray"
            android:textSize="9pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/biogasheader" />

        <TextView
            android:id="@+id/ElectricalOTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="88dp"
            android:text="Electrical Output (kWh): "
            android:textColor="@android:color/darker_gray"
            android:textSize="7pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/EnergyTitle" />

        <TextView
            android:id="@+id/LoadkWTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="32dp"
            android:text="Load (kW): "
            android:textColor="@android:color/darker_gray"
            android:textSize="9pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/LoadTitle" />

        <TextView
            android:id="@+id/hoursRunningTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:text="Hours Running:"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/LoadkWTitle" />

        <TextView
            android:id="@+id/LoadTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="28dp"
            android:text="Load (W): "
            android:textColor="@android:color/darker_gray"
            android:textSize="9pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ElectricalOTitle" />

        <TextView
            android:id="@+id/EOwLTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:text="Electrical Output(kWh): "
            android:textColor="@android:color/darker_gray"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/EnergyTitle" />

        <TextView
            android:id="@+id/EOwLTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="4dp"
            android:text="(without loss)"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/EOwLTitle" />

        <TextView
            android:id="@+id/resultsHeader2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="436dp"
            android:layout_marginTop="36dp"
            android:text="Options"
            android:textColor="@android:color/white"
            android:textSize="9pt"
            app:layout_constraintStart_toEndOf="@id/OutputHeader"
            app:layout_constraintTop_toTopOf="@id/biogasheader" />

        <EditText
            android:id="@+id/energyMJ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="176dp"
            android:layout_marginTop="100dp"
            android:ems="4"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textSize="8pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/biogasheader" />

        <EditText
            android:id="@+id/biogasINPUT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="176dp"
            android:layout_marginTop="48dp"
            android:ems="4"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textSize="8pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/biogasheader" />

        <EditText
            android:id="@+id/electricalOWL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="176dp"
            android:layout_marginTop="12dp"
            android:ems="4"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="numberDecimal"
            android:textSize="8pt"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/energyMJ" />

        <EditText
            android:id="@+id/electricalOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="176dp"
            android:layout_marginTop="12dp"
            android:ems="4"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="numberDecimal"
            android:textSize="8pt"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/electricalOWL" />

        <EditText
            android:id="@+id/loadW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="176dp"
            android:layout_marginTop="12dp"
            android:ems="4"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textSize="8pt"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/electricalOutput" />

        <EditText
            android:id="@+id/loadkW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="176dp"
            android:layout_marginTop="12dp"
            android:ems="4"
            android:textColor="@color/white"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="numberDecimal"
            android:textSize="8pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loadW" />

        <EditText
            android:id="@+id/hoursRunning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="176dp"
            android:layout_marginTop="12dp"
            android:ems="4"
            android:textColor="@color/white"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="numberDecimal"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loadkW" />

        <EditText
            android:id="@+id/powerOutField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="176dp"
            android:layout_marginTop="12dp"
            android:ems="4"
            android:textColor="@color/white"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="numberDecimal"
            android:textSize="8pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hoursRunning" />

        <Button
            android:id="@+id/resultSave"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="664dp"
            android:layout_marginTop="4dp"
            android:text="SAVE"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resultsHeader2" />


        <Button
            android:id="@+id/resultNew"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="664dp"
            android:layout_marginTop="8dp"
            android:text="NEW"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resultSave" />


        <ImageView
            android:id="@+id/pulsingImageView"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/pulsingthunder"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.589"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/eSimulate" />

        <TextClock
            android:id="@+id/countdownTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:format12Hour=""
            android:format24Hour="HH:mm:ss:SSS"
            android:paddingTop="100dp"
            android:textColor="@color/white"
            android:textSize="25pt"
            app:layout_constraintBaseline_toBottomOf="@id/pulsingImageView"
            app:layout_constraintStart_toStartOf="@id/eSimulate"
            tools:layout_editor_absoluteY="303dp" />

        <Button
            android:id="@+id/eSimulate"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="384dp"
            android:layout_marginTop="40dp"
            android:background="@color/design_default_color_primary_variant"
            android:text="SIMULATE"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/biogasheader" />

        <Button
            android:id="@+id/stop"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="524dp"
            android:layout_marginTop="40dp"
            android:background="@color/design_default_color_primary_variant"
            android:enabled="true"
            android:text="STOP"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/biogasheader" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
