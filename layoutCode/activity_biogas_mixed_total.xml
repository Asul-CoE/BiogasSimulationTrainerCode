<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="30dp"
    tools:context=".BiogasMixedTotal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        tools:context=".BiogasMixedTotal">

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="452dp"
            android:layout_marginTop="100dp"
            android:text="m^3/day "
            android:textColor="@android:color/darker_gray"
            android:textSize="8pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/MixedBiogasHeader" />

        <TextView
            android:id="@+id/biogasheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="BIOGAS PLANT SIMULATION TRAINER"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/MixedBiogasHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginTop="44dp"
            android:text="Result of Mixed biogas:"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/biogasheader" />

        <EditText
            android:id="@+id/mixedbiogasResultEdittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="288dp"
            android:layout_marginTop="60dp"
            android:ems="4"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textSize="15pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/MixedBiogasHeader" />

        <Button
            android:id="@+id/mixedbiogasButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="288dp"
            android:layout_marginTop="104dp"
            android:background="@color/design_default_color_primary_variant"
            android:text="SIMULATE"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mixedbiogasResultEdittext" />

        <Button
            android:id="@+id/mixedbiogasCalculate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="288dp"
            android:layout_marginTop="40dp"
            android:background="@color/design_default_color_primary_variant"
            android:text="Calculate"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mixedbiogasResultEdittext" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
