<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="30dp"
    tools:context=".Cook">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        tools:context=".Cook">


        <Button
            android:id="@+id/stopButton"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="188dp"
            android:layout_marginTop="292dp"
            android:background="@color/design_default_color_primary_variant"
            android:enabled="true"
            android:text="STOP"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/biogasheader" />

        <Button
            android:id="@+id/eSimulate2"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="292dp"
            android:background="@color/design_default_color_primary_variant"
            android:text="SIMULATE"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/biogasheader" />

        <TextView
            android:id="@+id/biogasheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="BIOGAS PLANT SIMULATION TRAINER"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/CookingHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="196dp"
            android:layout_marginTop="8dp"
            android:text="Cooking Simulation"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/biogasheader" />

        <TextView
            android:id="@+id/ElectricalOTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="68dp"
            android:text="Initial Gas amount: "
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/CookingHeader" />

        <TextView
            android:id="@+id/unit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:layout_marginTop="72dp"
            android:text="m^3/day "
            android:textColor="@android:color/darker_gray"
            android:textSize="8pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/CookingHeader" />

        <TextView
            android:id="@+id/unit3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="308dp"
            android:layout_marginTop="200dp"
            android:text="m^3/hr "
            android:textColor="@android:color/darker_gray"
            android:textSize="8pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/CookingHeader" />

        <TextView
            android:id="@+id/unit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="308dp"
            android:layout_marginTop="140dp"
            android:text="m^3/hr "
            android:textColor="@android:color/darker_gray"
            android:textSize="8pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/CookingHeader" />

        <TextView
            android:id="@+id/remaininggas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="36dp"
            android:text="Remaining Gas:"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/LoadTitle" />

        <TextView
            android:id="@+id/LoadTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="40dp"
            android:text="Consumption Lvl: "
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ElectricalOTitle" />

        <TextView
            android:id="@+id/resultsHeader2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="524dp"
            android:layout_marginTop="24dp"
            android:text="Options"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/biogasheader"
            app:layout_constraintTop_toTopOf="@id/biogasheader" />

        <EditText
            android:id="@+id/initialGasINPUT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="212dp"
            android:layout_marginTop="48dp"
            android:ems="3"
            android:inputType="numberDecimal"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textSize="10pt"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/CookingHeader" />

        <EditText
            android:id="@+id/ConsumptionINPUT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="212dp"
            android:layout_marginTop="20dp"
            android:ems="3"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="numberDecimal"
            android:textSize="10pt"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/initialGasINPUT" />

        <EditText
            android:id="@+id/remainingGasINPUT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="212dp"
            android:layout_marginTop="12dp"
            android:ems="3"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="numberDecimal"
            android:textSize="10pt"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ConsumptionINPUT" />

        <Button
            android:id="@+id/resultNew"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="656dp"
            android:text="NEW"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resultsHeader2"
            tools:layout_editor_absoluteY="62dp" />

        <Button
            android:id="@+id/resultExit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="656dp"
            android:layout_marginTop="8dp"
            android:text="EXIT"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resultNew" />

        <ImageView
            android:id="@+id/lantern"
            android:layout_width="242dp"
            android:layout_height="354dp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="180dp"
            android:src="@drawable/stovemodern"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@id/resultNew"
            app:layout_constraintTop_toBottomOf="@id/CookingHeader" />

        <ImageView
            android:id="@+id/pulsingImageView"
            android:layout_width="113dp"
            android:layout_height="69dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/flame"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.568"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/CookingHeader" />

        <TextClock
            android:id="@+id/countdownTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="188dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:format12Hour=""
            android:format24Hour="HH:mm"
            android:paddingTop="50dp"
            android:textColor="@color/white"
            android:textSize="25pt"
            app:layout_constraintBaseline_toBottomOf="@id/lantern"
            app:layout_constraintStart_toStartOf="@id/CookingHeader"
            tools:layout_editor_absoluteY="296dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
